{
  "manifest_version": 3,
  "name": "Support Chat Bot",
  "version": "1.0.0",
  "description": "Automate support chat conversations on Swiggy and Zomato using AI",
  
  "permissions": [
    "storage",
    "activeTab"
  ],
  
  "host_permissions": [
    "https://www.swiggy.com/*",
    "https://www.zomato.com/*",
    "https://api.openai.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://www.swiggy.com/*"],
      "js": ["content-scripts/swiggy-chat.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://www.zomato.com/*"],
      "js": ["content-scripts/zomato-chat.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Support Chat Bot"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["utils/*"],
      "matches": ["https://www.swiggy.com/*", "https://www.zomato.com/*"]
    }
  ]
}